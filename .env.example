# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=development
PORT=3000

# Blockchain Configuration
PRIVATE_KEY=your_private_key_here
RPC_URL=https://sepolia.infura.io/v3/your-key
CONTRACT_ADDRESS=0xYourValveChainContractAddress
PO_CONTRACT_ADDRESS=0xYourPurchaseOrderContractAddress

# Fee Configuration
FEE_WALLET_ADDRESS=0xYourFeeWalletAddress

# Security
JWT_SECRET=your-jwt-secret-here

# Database Configuration
DB_PATH=./data/users.db

# Email Configuration (if using nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Cloud Configuration (AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Cloud Configuration (Azure)
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_RESOURCE_GROUP=valvechain-rg
AZURE_LOCATION=eastus

# Cloud Configuration (GCP)
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=your-pinecone-api-key-here